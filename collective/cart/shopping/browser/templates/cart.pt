<html
  i18n:domain="collective.cart.core"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
  <body>
    <div metal:fill-slot="main">
      <section id="collective-cart-shopping">
        <section id="order-flow" i18n:domain="collective.cart.shopping">
          <span id="current-step" i18n:translate="">
            1. Cart</span>&nbsp;&nbsp;&#45;&nbsp;&nbsp;<span i18n:translate="">
            2. Customer Info and Shipping Method</span>&nbsp;&nbsp;&#45;&nbsp;&nbsp;<span i18n:translate="">
            3. Confirmation</span>
        </section>
        <section class="description" tal:condition="view/message">
          <p tal:content="view/message/description" />
        </section>
        <section class="checkout-content cart">
          <p
            i18n:translate=""
            id="cart-is-empty"
            tal:condition="not: view/cart_articles">
            Cart is empty.
          </p>
          <div
            tal:condition="view/cart_articles"
            tal:replace="structure provider:collective.cart.core.cartviewletmanager" />
        </section>
        <section class="text" tal:condition="view/message">
          <div tal:replace="structure view/message/text" />
        </section>
      </section>
    </div>
  </body>
</html>
