<div
  id="add-to-cart"
  tal:condition="viewlet/available"
  >
  <form tal:attributes="action context/@@plone_context_state/current_base_url">
    <input
      id="quantity"
      list="numbers"
      min="1"
      name="quantity"
      placeholder="1"
      type="number"
      tal:attributes="
        max viewlet/quantity_max;
        size viewlet/quantity_size"
      />
    <datalist
      id="numbers"
      >
      <option
        tal:repeat="number viewlet/numbers"
        tal:attributes="value number"
        tal:content="number"
        />
    </datalist>
    <button
      type="submit"
      name="form.addtocart"
      value="form.addtocart"
      i18n:translate=""
      >Add To Cart</button>
  </form>
</div>