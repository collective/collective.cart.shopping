<section
  id="shipping-method"
  i18n:domain="collective.cart.shopping"
  tal:condition="viewlet/shipping_method"
  tal:define="item viewlet/shipping_method">
  <table>
    <tbody>
      <tr>
        <td i18n:translate="">
          Shipping Method:
        </td>
        <td tal:content="item/Title">
        <td class="price-and-quantity">
          <span class="gross" tal:content="item/gross" />
          <br />
          <span class="vat" i18n:translate="">
            Including VAT: <span i18n:name="vat" tal:replace="item/vat_rate" /> &#37;
          </span>
        </td>
      </tr>
    </tbody>
  </table>
</section>
