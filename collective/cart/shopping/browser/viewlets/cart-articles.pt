<section
  id="cart-articles"
  i18n:domain="collective.cart.shopping"
  tal:condition="view/cart_articles">
  <table>
    <tbody>
      <form
        method="post"
        tal:attributes="action context/@@plone_context_state/current_base_url"
        tal:repeat="item viewlet/articles">
        <tr>
          <td class="image">
            <a
              tal:condition="item/url"
              tal:attributes="
                href item/url;
                title item/title">
              <img tal:replace="structure item/image" />
            </a>
            <img
                tal:condition="not: item/url"
                tal:replace="structure item/image"
                />
          </td>
          <td class="name">
            <h3>
              <a
                tal:condition="item/url"
                tal:attributes="href item/url"
                tal:content="item/title"
                />
              <span
                tal:condition="not: item/url"
                tal:replace="item/title"
                />
            </h3>
            <p tal:content="item/description" />
          </td>
          <td class="price-and-quantity">
            <input
              id="quantity"
              list="numbers"
              min="1"
              name="quantity"
              type="number"
              tal:attributes="
                max item/quantity_max;
                value item/quantity;
                size item/quantity_size"
              />
            <datalist id="numbers">
              <option
                tal:repeat="number item/numbers"
                tal:attributes="value number"
                tal:content="number"
                />
            </datalist>&nbsp;&times;&nbsp;
            <span class="gross" tal:content="item/gross" />
            <br />
            <span class="vat" i18n:translate="">
              Including VAT: <span i18n:name="vat" tal:replace="item/vat_rate" /> &#37;
            </span>
            <section class="buttons">
              <button
                class="shopping-button update"
                i18n:translate=""
                name="form.update.article"
                type="submit"
                tal:attributes="value item/id"
                value="form.update.article"
                >
                Update
              </button>
              <button
                class="shopping-button delete"
                i18n:translate=""
                name="form.delete.article"
                type="submit"
                tal:attributes="value item/id"
                value="form.delete.article"
                >
                Delete
              </button>
            </section>
          </td>
        </tr>
      </form>
    </tbody>
  </table>
</section>
