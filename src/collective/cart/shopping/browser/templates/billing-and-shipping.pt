<html
  i18n:domain="collective.cart.shopping"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal">
  <body>
    <metal:main fill-slot="main">
      <section id="collective-cart-shopping">
        <section id="order-flow">
          <a
            i18n:translate=""
            tal:attributes="href string:${context/absolute_url}/@@cart">
            1. Cart</a>&nbsp;&nbsp;&#45;&nbsp;&nbsp;<span id="current-step" i18n:translate="">
            2. Customer Info and Shipping Method</span>&nbsp;&nbsp;&#45;&nbsp;&nbsp;<span i18n:translate="">
            3. Confirmation</span>
        </section>
        <section class="description" tal:condition="view/message">
          <p tal:content="view/message/description" />
        </section>
        <section class="checkout-content billing-and-shipping">
          <section id="customer-info" i18n:domain="collective.cart.shopping">
            <form
              method="post"
              tal:attributes="action context/plone_context_state/current_base_url">
              <span tal:replace="structure context/@@authenticator/authenticator" />
              <div tal:replace="structure provider:collective.cart.shopping.billing.shipping.manager" />
            </form>
          </section>
        </section>
        <section class="text" tal:condition="view/message">
          <div tal:replace="structure view/message/text" />
        </section>
      </section>
    </metal:main>
  </body>
</html>