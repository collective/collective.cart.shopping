<section id="customer-info" i18n:domain="collective.cart.shopping">
  <form
    method="post"
    tal:attributes="action context/@@plone_context_state/current_base_url"
    tal:define="info viewlet/billing_info">
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">First Name</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="first_name" type="text" required="required" tal:attributes="value info/first_name" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Last Name</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="last_name" type="text" required="required" tal:attributes="value info/last_name" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Organization</tal:label>
      </dt>
      <dd>
        <input name="organization" type="text" tal:attributes="value info/organization" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">VAT Number</tal:label>
      </dt>
      <dd>
        <input name="vat" type="text" placeholder="Only for organization customer" tal:attributes="value info/vat" i18n:attributes="placeholder" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">E-mail</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="email" type="email" required="required" tal:attributes="value info/email" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Street Address</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="street" type="text" required="required" tal:attributes="value info/street" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Post Code</tal:label>
      </dt>
      <dd>
        <input name="post" type="text" tal:attributes="value info/post" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">City</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="city" type="text" required="required" tal:attributes="value info/city" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Phone Number</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="phone" type="tel" required="required" tal:attributes="value info/phone" />
      </dd>
    </dl>
    <p id="billing-and-shipping-same-or-different">
      <span i18n:translate="billing-and-shipping-same-or-different">
        Are billing and shipping addresses same or different?
      </span>
      <select
        name="billing-and-shipping-same-or-different">
        <option tal:attributes="selected viewlet/billing_same_as_shipping" i18n:translate="" value="same">Same</option>
        <option tal:attributes="selected not:viewlet/billing_same_as_shipping" i18n:translate="" value="different">Different</option>
      </select>
    </p>
    <dl class="field shipping-methods" tal:condition="viewlet/shipping_methods">
      <dt>
        <tal:label i18n:translate="">Shipping Method</tal:label>
        <span
          class="required"
          i18n:domain="plone"
          i18n:attributes="title"
          tal:condition="not: viewlet/single_shipping_method"
          title="title_required"> </span>
      </dt>
      <dd>
        <div tal:repeat="item viewlet/shipping_methods">
          <label>
            <input
              name="shipping-method"
              type="radio"
              required="required"
              tal:attributes="
                checked item/checked;
                value item/uuid"
              tal:condition="not: viewlet/single_shipping_method" />
            <span tal:content="item/title" />
          </label>
          <p tal:condition="item/description" tal:content="item/description" />
        </div>
      </dd>
    </dl>
    <button
      class="buttons shopping-button back"
      formnovalidate
      i18n:translate=""
      name="form.buttons.back"
      value="form.buttons.back"
      type="submit">
      Back
    </button>
    <button
      class="buttons shopping-button checkout"
      i18n:translate=""
      name="form.to.confirmation"
      value="form.to.confirmation"
      type="submit">
      Next
    </button>
  </form>
</section>