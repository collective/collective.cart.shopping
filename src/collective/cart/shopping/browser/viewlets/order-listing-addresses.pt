<section i18n:domain="collective.cart.shopping" id="addresses">
  <dl>
    <dt i18n:translate="">Billing Address</dt>
    <dd tal:define="item view/billing">
      <span class="name">
        <span class="first-name" tal:content="item/first_name" />
        <span class="last-name" tal:content="item/last_name" />
        <span class="organization" tal:content="item/organization" />
        <span class="vat-number" tal:content="item/vat" />
      </span>
      <span class="location">
        <span class="post" tal:content="item/post" />
        <span class="city" tal:content="item/city" />
      </span>
      <span class="phone" tal:content="item/phone" />
      <span class="email" tal:content="item/email" />
    </dd>
  </dl>
  <dl>
    <dt i18n:translate="">Shipping Address</dt>
    <dd tal:define="item view/shipping">
      <span class="name">
        <span class="first-name" tal:content="item/first_name" />
        <span class="last-name" tal:content="item/last_name" />
        <span class="organization" tal:content="item/organization" />
        <span class="vat-number" tal:content="item/vat" />
      </span>
      <span class="location">
        <span class="post" tal:content="item/post" />
        <span class="city" tal:content="item/city" />
      </span>
      <span class="phone" tal:content="item/phone" />
      <span class="email" tal:content="item/email" />
    </dd>
  </dl>
</section>