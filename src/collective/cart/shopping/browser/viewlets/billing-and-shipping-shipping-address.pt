<script type="text/javascript">
  (function($) {
    $(document).ready(function() {
      $('#billing-and-shipping-same-or-different > select').change(function(){
        var value = $('#billing-and-shipping-same-or-different > select').val();
        if (value == 'different') {
          $('#shipping-address').css('display', 'block');
          $('#shipping-address span').css('display', 'inline');
          $('#shipping-address input.required').attr('required', 'required');
        }
        if (value == 'same') {
          $('#shipping-address').css('display', 'none');
          $('#shipping-address span').css('display', 'none');
          $('#shipping-address input.required').removeAttr('required');
        }
      });
      if($('#different').attr('selected')) {
        $('#shipping-address').css('display', 'block');
      };
    })
  })(jQuery);
</script>

<section i18n:domain="collective.cart.shopping" id="billing-and-shipping-same-or-different">
  <span i18n:translate="billing-and-shipping-same-or-different">
    Are billing and shipping addresses same or different?
  </span>
  <select
    name="billing-and-shipping-same-or-different">
    <option
      i18n:translate=""
      id="same"
      tal:attributes="selected viewlet/billing_same_as_shipping"
      value="same">Same</option>
    <option
      i18n:translate=""
      id="different"
      tal:attributes="selected not:viewlet/billing_same_as_shipping"
      value="different">Different</option>
  </select>
</section>

