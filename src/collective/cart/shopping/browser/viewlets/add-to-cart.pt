<div
  id="add-to-cart"
  i18n:domain="collective.cart.shopping"
  tal:condition="viewlet/available">
  <form
    method="post"
    tal:attributes="action context/@@plone_context_state/current_base_url"
    tal:condition="not: viewlet/soldout">
    <section id="money">
      <p id="price" class="gross" tal:content="view/gross" />
      <p id="vat" i18n:translate="">
        Including VAT: <span i18n:name="vat" tal:replace="context/vat" /> &#37;
      </p>
    </section>
    <section id="discount" tal:condition="view/discount_end">
      <p id="discount-message" i18n:translate="">
        (Discount valid till <span i18n:name="discount_end" tal:replace="view/discount_end" />)
      </p>
      <p id="normal-price" i18n:translate="">
        Normal Price: <span i18n:name="normal-price" tal:replace="context/money" />
      </p>
    </section>
    <label i18n:translate="">Quantity</label>
    <input
      id="quantity"
      name="quantity"
      tal:attributes="
        maxlength viewlet/quantity_size;
        size viewlet/quantity_size"
      type="text"
      value="1"
      />
    <span
      id="pcs"
      i18n:translate="">pcs</span>
    <span class="stock" i18n:translate="">
      Stock: <span i18n:name="stock" tal:replace="viewlet/quantity_max" /> pcs
    </span>
    <button
      class="shopping-button update"
      i18n:domain="collective.cart.core"
      i18n:translate=""
      name="form.buttons.AddToCart"
      tal:attributes="value viewlet/uuid"
      type="submit"
      >Add To Cart</button>
  </form>
  <p
    class="sold-out"
    i18n:translate=""
    tal:condition="viewlet/soldout">
    Sold Out
  </p>
</div>