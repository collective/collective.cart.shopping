<section
  class="collective-cart-shopping-shipping-method"
  id="billing-and-shipping-shipping-method"
  i18n:domain="collective.cart.shopping"
  tal:condition="viewlet/shipping_methods"
  >
  <form
    method="post"
    tal:attributes="action context/@@plone_context_state/current_base_url">
    <select
      id="shipping-method"
      name="shipping-method"
      >
      <tal:block tal:repeat="item viewlet/shipping_methods">
        <option
          tal:condition="python: item.UID != viewlet.shipping_uuid"
          tal:attributes="value item/UID"
          tal:content="item/Title" />
        <option
          tal:condition="python: item.UID == viewlet.shipping_uuid"
          tal:attributes="value item/UID"
          tal:content="item/Title"
          selected="selected" />
      </tal:block>
    </select>
    <span id="shipping-gross" tal:content="viewlet/shipping_gross" />
    <button
      class="standalone update-shipping-method"
      i18n:translate=""
      name="form.update.shipping.method"
      type="submit"
      value="form.update.shipping.method"
      >
      Update Shipping Method
    </button>
  </form>
</section>