<section id="collective-cart-shopping-order" i18n:domain="collective.cart.core">
  <dl class="collapsible" tal:define="cart viewlet/order">
    <dt class="collapsibleHeader">
      <span class="order-number" i18n:translate="order-number">
        Order Number: <tal:name i18n:name="order_number" tal:replace="cart/id" /></span>
      <span class="order-state">
        <tal:translate i18n:translate="">State:</tal:translate>
        <span i18n:translate="" tal:replace="cart/state_title" /></span>
      <span class="order-updated" i18n:translate="order-updated">
        Updated: <tal:name i18n:name="order_updated" tal:replace="cart/modified" /></span>
    </dt>
    <dd class="collapsibleContent">
      <section id="cart-articles">
        <table>
          <tbody>
            <tr tal:repeat="item cart/articles">
              <td class="image">
                  <a
                    tal:condition="item/url"
                    tal:attributes="
                      href item/url;
                      title item/title">
                    <img tal:attributes="src item/image_url" />
                  </a>
                  <img
                    tal:condition="not: item/url"
                    tal:attributes="src item/image_url"
                    />
              </td>
              <td class="name">
                <h3>
                  <a
                    tal:condition="item/url"
                    tal:attributes="href item/url"
                    tal:content="item/title"
                    />
                  <span
                    tal:condition="not: item/url"
                    tal:replace="item/title"
                    />
                </h3>
                <p tal:content="item/description" />
              </td>
              <td class="price-and-quantity">
                <span class="gross" tal:content="item/gross_subtotal" />
                <br />
                <span class="vat" i18n:translate="">
                  Including VAT: <span i18n:name="vat" tal:replace="item/vat_rate" /> &#37;
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </section>

      <section
        id="shipping-method"
        tal:define="item cart/shipping_method">
        <table>
          <tbody>
            <tr>
              <td class="shipping-method-title" i18n:translate="">
                Shipping Method:
              </td>
              <td tal:content="item/Title" />
              <td class="price-and-quantity">
                <span class="gross" tal:content="item/gross" />
                <br />
                <span class="vat" i18n:translate="">
                  Including VAT: <span i18n:name="vat" tal:replace="item/vat_rate" /> &#37;
                </span>
              </td>
            </tr>
          </tbody>
        </table>
      </section>

      <section id="cart-total">
        <span i18n:translate="">Total</span>&nbsp;&nbsp;
        <span id="total" tal:content="cart/total" />
      </section>

      <section id="addresses">
        <dl>
          <dt i18n:translate="">Billing Address</dt>
          <dd tal:define="item cart/billing_info">
            <span tal:replace="item/first_name" />&nbsp;<span tal:replace="item/last_name" />&nbsp;&nbsp;<span tal:replace="item/organization" />&nbsp;&nbsp;<span tal:replace="item/vat" /><br />
            <span tal:replace="item/post" />&nbsp;<span tal:replace="item/city" /><br />
            <span tal:replace="item/phone" /><br />
            <span tal:replace="item/email" /><br />
          </dd>
        </dl>
        <dl>
          <dt i18n:translate="">Shipping Address</dt>
          <dd tal:define="item cart/shipping_info">
            <span tal:replace="item/first_name" />&nbsp;<span tal:replace="item/last_name" />&nbsp;&nbsp;<span tal:replace="item/organization" />&nbsp;&nbsp;<span tal:replace="item/vat" /><br />
            <span tal:replace="item/post" />&nbsp;<span tal:replace="item/city" /><br />
            <span tal:replace="item/phone" /><br />
            <span tal:replace="item/email" /><br />
          </dd>
        </dl>
      </section>

    </dd>
  </dl>
</section>
