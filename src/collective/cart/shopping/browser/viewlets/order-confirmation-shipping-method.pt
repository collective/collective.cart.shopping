<section
  id="shipping-method"
  i18n:domain="collective.cart.shopping"
  tal:condition="view/shipping_method"
  tal:define="item view/shipping_method">
  <table>
    <tbody>
      <tr>
        <td class="shipping-method-title" i18n:translate="">
          Shipping Method:
        </td>
        <td tal:content="item/title" />
        <td class="price-and-quantity">
          <tal:block tal:condition="not: item/is_free">
            <span class="gross" tal:content="item/gross" />
            <br />
            <span class="vat_rate" i18n:translate="">
              Including VAT: <span i18n:name="vat_rate" tal:replace="item/vat_rate" />
            </span>
          </tal:block>
        </td>
      </tr>
    </tbody>
  </table>
</section>
