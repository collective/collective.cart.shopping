<section
  class="collective-cart-shopping-checkout"
  id="checkout"
  i18n:domain="collective.cart.shopping">
  <form
    method="post"
    tal:attributes="action context/plone_context_state/current_base_url">
    <span tal:replace="structure context/@@authenticator/authenticator" />
    <button
      class="shopping-button clear"
      i18n:translate=""
      name="form.clear.cart"
      type="submit"
      value="form.clear.cart">
      Clear
    </button>
    <button
      class="shopping-button checkout"
      i18n:translate=""
      name="form.checkout"
      type="submit"
      value="form.checkout">
      Check Out
    </button>
  </form>
</section>